<div class="row">
  <div class="col-md-12">
    <h1>Contact</h1>
  </div>

  <div class="col-md-4">
    <div id="errors"></div>
     <div class="form-group">
       <form id="contact-form">
         <div class="form-group">
         <label class="control-label">
           Email to spam:
           <div class="input-group">
           <span class="input-group-addon glyphicon glyphicon-envelope" style="top: 0px;"></span>
           <input type="email" class="form-control" data-input="email">
            </div>
         </label>
         </div>

         <div class="form-group">
         <label class="control-label">
           Phone number to prank call:
           <div class="input-group">
             <span class="input-group-addon glyphicon glyphicon-earphone" style="top: 0px;"></span>
           <input type="tel" class="form-control" data-input="phone">
         </label>
         </div>
         </div>


         <div class="form-group">
         <label>
           What is your favorite icecream?
             <% ice_creams = %w(chocolate vanillla superman strawberry cakebatter tuttifruitti AmericoneDream) %>
             <div class="select-group">
             <select class="form-control" style="width: 100%;">
               <% ice_creams.each_with_index do |thing, idx| %>
                  <option value="<%= idx %>"><%= thing %></option>
               <% end %>
             </select>
             </div>
         </label>
         </div>
         <button class="btn btn-lg btn-primary">I want spam!</button>
       </form>
     </div>
  </div>


  <div class="col-md-6 col-md-offset-2">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Employee</th>
        <th>Phone #</th>
      </tr>
      <tr>
        <td>TJ</td>
        <td>456-423-8931</td>
      </tr>
      <tr>
        <td>Alan</td>
        <td>482-182-1882</td>
      </tr>
      <tr>
        <td>Kyle</td>
        <td>Too Stupid to be given phone</td>
      </tr>
    </table>
  </div>

</div>