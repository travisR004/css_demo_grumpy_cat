
<div class="form-group">
  <form action="<%= session_url %>" method="post">
    <input
       name="authenticity_token"
       type="hidden"
       value="<%= form_authenticity_token %>">
    <div class="form-group">
      <label for="user_username">Username</label>
      <input
         class="form-control"
         id="user_username"
         name="user[username]"
         type="text">
     </div>
    <br>
    <div class="form-group">
      <label for="user_password">Password</label>
      <input
         class="form-control"
         id="user_password"
         name="user[password]"
         type="password">
     </div>
    <br>

    <button class="btn btn-lg btn-info">Sign In!</button>
  </form>
</div>